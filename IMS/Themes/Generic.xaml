<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:converter="clr-namespace:IMS.Common.Converters">

    <converter:VisibilityConverter x:Key="VisibilityConverter" />
    <converter:ImageColorConverter x:Key="ImageColorConverter" />

    <!-- Common brushes and colors -->
    <SolidColorBrush x:Key="PrimaryBorderBrush" Color="#FFCCCCCC" />

    <SolidColorBrush x:Key="LoadingPanelBackgroundBrush" Color="White" />

    <SolidColorBrush x:Key="PrimaryBakcgroundBrush" Color="#FFCCCCCC" />

    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="Black" />

    <SolidColorBrush x:Key="TitleForegroundBrush" Color="#BF000000" />

    <SolidColorBrush x:Key="SubTitleForegroundBrush" Color="#FF132D6E" />

    <SolidColorBrush x:Key="UIElementForegroundBrush" Color="White" />

    <SolidColorBrush x:Key="ContentBrush" Color="Transparent" />

    <!-- Navigation bar brushes and colors -->

    <SolidColorBrush x:Key="NavigationBarBackgroundBrush" Color="#FFE8E8E8" />

    <SolidColorBrush x:Key="NavigationBarItemBackgroundBrush" Color="#FF3F3F3F" />

    <!-- Filter panel brushes and colors -->

    <SolidColorBrush x:Key="FilterPanelBackgroundBrush" Color="Transparent" />

    <SolidColorBrush x:Key="FilterPanelItemBackgroundBrush" Color="Transparent" />

    <SolidColorBrush x:Key="FilterPanelSelectedItemBackgroundBrush" Color="#FF2F51A5" />

    <!-- Command bar brushes and colors -->
    <SolidColorBrush x:Key="CommandBarBackgroudBrush" Color="#FF3F3F3F" />

    <SolidColorBrush x:Key="CommandBarButtonBackgroundBrush" Color="Transparent" />

    <!-- Dialog panel brushes and colors -->
    <SolidColorBrush x:Key="DialogPanelBackgroundBrush" Color="#FF171616" />

    <SolidColorBrush x:Key="DialogPanelButtonBackgroundBrush" Color="#FF5F5959" />

    <SolidColorBrush x:Key="DialogPanelForegroundBrush" Color="#FFDAD1D1" />

    <SolidColorBrush x:Key="DialogPanelTitleForegroundBrush" Color="#FF007ACC" />

    <SolidColorBrush x:Key="DialogPanelUIElementForegroundBrush" Color="#FFDAD1D1" />

    <!-- DataGrid brushes and colors -->
    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="#BFE8E8E8" />

    <SolidColorBrush x:Key="DataGridSelectedRowBackgroundBrush" Color="#FF2F51A5" />

    <!-- CollectionCardView -->
    <SolidColorBrush x:Key="CollectionCardViewSelectedItemBackgroundBrush" Color="#FF2F51A5" />

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Margin" Value="3, 5" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{DynamicResource ContentBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorderBrush}" />
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Margin" Value="3, 5" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorderBrush}" />
    </Style>

    <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Background" Value="{DynamicResource PrimaryBakcgroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Opacity" Value="0.75" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border CornerRadius="2" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Thumb.IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="1" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" SnapsToDevicePixels="True" BorderThickness="{TemplateBinding BorderThickness}">
            <Track x:Name="PART_Track" IsDirectionReversed="True">
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}" />
                </Track.Thumb>
            </Track>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="HorizontalScrollBar" TargetType="{x:Type ScrollBar}">
        <Border>
            <Track x:Name="PART_Track" IsDirectionReversed="False">
                <Track.Thumb>
                    <Thumb Style="{StaticResource ScrollBarThumb}" />
                </Track.Thumb>
            </Track>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto" />
                <Setter Property="Height" Value="10" />
                <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="10" />
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CommonScrollViewer" TargetType="{x:Type ScrollViewer}">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ScrollContentPresenter />
                            <ScrollBar x:Name="PART_VerticalScrollBar" Grid.RowSpan="2" Grid.Column="1" Value="{TemplateBinding VerticalOffset}" Maximum="{TemplateBinding ScrollableHeight}" ViewportSize="{TemplateBinding ViewportHeight}" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" />
                            <ScrollBar x:Name="PART_HorizontalScrollBar" Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Value="{TemplateBinding HorizontalOffset}" Maximum="{TemplateBinding ScrollableWidth}" ViewportSize="{TemplateBinding ViewportWidth}" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ImagedTextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border BorderThickness="1" BorderBrush="{StaticResource PrimaryBorderBrush}" Background="{TemplateBinding Background}">
                        <Grid Height="{TemplateBinding Height}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{TemplateBinding Width}" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{TemplateBinding ToolTip}" />
                            <TextBox Text="{TemplateBinding Text}" Background="{TemplateBinding Background}" VerticalContentAlignment="Center" Margin="0" BorderThickness="0" />
                            <Image Source="{TemplateBinding Tag}" Grid.Column="1" Width="16" Height="16" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RequiredTextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border BorderThickness="1" BorderBrush="{StaticResource PrimaryBorderBrush}" Background="{TemplateBinding Background}">
                        <Grid Height="{TemplateBinding Height}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{TemplateBinding Width}" />
                                <ColumnDefinition Width="30" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TextBoxText" Text="{TemplateBinding Text}" VerticalContentAlignment="Center" Background="{TemplateBinding Background}" Margin="0" BorderThickness="0" />
                            <Image x:Name="TextBoxImage" Source="{StaticResource IconExclamation}" Grid.Column="1" Width="16" Height="16" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter Property="Visibility" Value="Visible" TargetName="TextBoxImage" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ImageButton" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="64" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                        <DockPanel LastChildFill="True" VerticalAlignment="Center">
                            <Image DockPanel.Dock="Left" x:Name="ImageButtonImage" Source="{TemplateBinding Tag,Converter={StaticResource ImageColorConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16" Opacity="{TemplateBinding Opacity}" Margin="4, 4, 0, 4" Visibility="{TemplateBinding Tag, Converter={StaticResource VisibilityConverter}}" SnapsToDevicePixels="True" />
                            <TextBlock DockPanel.Dock="Bottom" x:Name="ImageButtonText" Text="{TemplateBinding Content}" Visibility="{TemplateBinding Content, Converter={StaticResource VisibilityConverter}}" SnapsToDevicePixels="True" Foreground="{DynamicResource UIElementForegroundBrush}" Opacity="{TemplateBinding Opacity}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </DockPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Button.IsEnabled" Value="True" />
                                <Condition Property="Button.IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Opacity" Value="0.75" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AutoHiddenImageButton" TargetType="{x:Type Button}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True" BorderBrush="{TemplateBinding BorderBrush}">
                        <Image x:Name="Image" Source="{TemplateBinding Tag}" Stretch="Fill" Opacity="{TemplateBinding Opacity}" Visibility="{TemplateBinding Visibility}" SnapsToDevicePixels="True" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsEnabled" Value="False">
                            <Setter Property="Visibility" Value="Hidden" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Button.IsEnabled" Value="True" />
                                <Condition Property="Button.IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Opacity" Value="0.75" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InputTip" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="3, 10" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Foreground" Value="{DynamicResource TitleForegroundBrush}" />
    </Style>

    <Style x:Key="PrimaryTitle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource TitleForegroundBrush}" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>

    <Style x:Key="SubTitle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource SubTitleForegroundBrush}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>

    <Style x:Key="CommandBar" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{DynamicResource CommandBarBackgroudBrush}" />
    </Style>

    <Style x:Key="CommandBarColumnSeperator" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Width" Value="2" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBorderBrush}" />
        <Setter Property="Margin" Value="0, 5" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

    <Style x:Key="CommandBarButton" TargetType="{x:Type Button}">
        <Setter Property="MinWidth" Value="64" />
        <Setter Property="Margin" Value="10, 5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonRoot" Background="{DynamicResource CommandBarButtonBackgroundBrush}" BorderThickness="0">
                        <StackPanel>
                            <Image x:Name="ButtonImage" Source="{TemplateBinding Tag,Converter={StaticResource ImageColorConverter}}" Margin="0, 10" HorizontalAlignment="Center" Width="32" Height="32" SnapsToDevicePixels="True" RenderTransformOrigin="0.5, 0.5">
                                <Image.RenderTransform>
                                    <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1" />
                                </Image.RenderTransform>
                            </Image>
                            <TextBlock x:Name="ButtonText" Text="{TemplateBinding Content}" Foreground="{DynamicResource UIElementForegroundBrush}" Margin="0, 10" HorizontalAlignment="Center" SnapsToDevicePixels="True" />
                        </StackPanel>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="ScaleX" From="1" To="1.3" Duration="0" />
                                        <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="ScaleY" From="1" To="1.3" Duration="0" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="ScaleX" From="1" To="0.7" Duration="0" />
                                        <DoubleAnimation Storyboard.TargetName="ImageScale" Storyboard.TargetProperty="ScaleY" From="1" To="0.7" Duration="0" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ButtonRoot" Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DataGridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource TitleForegroundBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinHeight" Value="30" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Style and template for the DataGridCell.-->
    <Style x:Key="DataGridCellStyle" TargetType="{x:Type DataGridCell}">
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{DynamicResource ContentBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource UIElementForegroundBrush}" />
                <Setter Property="Background" Value="{DynamicResource DataGridSelectedRowBackgroundBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

